<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="com.github.brimworks-lua-zlib" default="install">
	<target name="install" description="install all components">
		<echo>com.github.brimworks-lua-zlib</echo>
		
		<sequential if:true="${install.os_arch.linux_i386}">
			<copy file="linux_i386/lua_plugins/zlib.so"      todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.linux_x86_64}">
			<copy file="linux_x86_64/lua_plugins/zlib.so"    todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_x86}">
			<copy file="windows_x86/lua_plugins/zlib.dll"    todir="${install.luaplugin}" />
		</sequential>
		
		<sequential if:true="${install.os_arch.windows_amd64}">
			<copy file="windows_amd64/lua_plugins/zlib.dll"  todir="${install.luaplugin}" />
		</sequential>
	</target>
</project>
